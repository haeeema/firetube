mixin video(video)
    div.mixins
        a(href=`/videos/${video.id}`).title=video.title
            span=video.description
        a(href="/users/" + video.owner.id).profile
            if (video.owner.socialOnly)
                img(src=video.owner.avatarUrl, width="50", height="50", style="border-radius: 70px")
            else
                img(src="/" + video.owner.avatarUrl, width="50", height="50", style="border-radius: 70px")
            h2=video.owner.name
        each hashtag in video.hashtags
            small  #{hashtag}
        small=video.createdAt 
        small #{video.meta.views} times
        hr