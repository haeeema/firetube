nav(style="box-shadow: 2px 2px 10px #f4f4f4; border: 1px solid #e9e9e9;")
            ul 
                li 
                    a(href="/", style="color: black; font-size: 20px") ðŸ”¥ Firetube
                if loggedIn
                    li
                        a(href="/videos/upload") upload
            form(method="GET", action="/search" style="display: flex; border: none; box-shadow: 0px 0px 0px white; padding: 0px")
                input(type="text", name="keyword", style="margin-top: 20px")
                input(type="submit", value="search", style="margin-top: 20px; background-color: white; font-weight: bold; text-decoration: none; cursor: pointer;")
            ul
                if !loggedIn 
                    li 
                        a(href="/join") join
                    li 
                        a(href="/login") login
                else 
                    li 
                        a(href="/users/logout") logout 
                    li
                        a(href=`/users/${loggedInUser._id}`)
                            if (loggedInUser.socialOnly)
                                img(src=loggedInUser.avatarUrl, width="30", height="30", style="border-radius: 70px")
                            else    
                                img(src="/" + loggedInUser.avatarUrl, width="30", height="30")