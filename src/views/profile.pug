extends base.pug
include mixins/video

block content
    form.profileForm
        if (user.socialOnly)
            img(src=user.avatarUrl, width="100", height="100", style="border-radius: 70px")
        else    
            img(src="/" + user.avatarUrl, width="100", height="100", style="border-radius: 70px")
        h4=user.email 
        h4=user.username 
        h4=locatin
        if user.id === loggedInUser._id
            a(href="edit").outBtn Edit Profile &rarr;
    each video in user.videos
        +video(video)
    else
        li Sorry nothing found.
        